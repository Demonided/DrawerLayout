<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="YellowButton">
        <item name="android:background">@color/YellowButton</item>
        <item name="android:textColor">@color/BlackButton</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BlackButton">
        <item name="android:background">@color/BlackButton</item>
        <item name="android:textColor">@color/YellowButton</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Digit">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>