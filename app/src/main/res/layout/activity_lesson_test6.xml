<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lesson_6.LessonTest6Activity">

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="476dp"
        android:onClick="onClickTest6"
        android:text="Хуйнюшка"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edContext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="Введи что нибудь "
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/edContext"
        app:layout_constraintStart_toStartOf="@+id/edContext"
        app:layout_constraintTop_toBottomOf="@+id/edContext" />

    <ImageView
        android:id="@+id/imNewImageView"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/edNewPassword"
        app:layout_constraintStart_toStartOf="@+id/edNewPassword"
        app:layout_constraintTop_toBottomOf="@+id/edNewPassword"
        app:srcCompat="@drawable/dula" />

    <Button
        android:id="@+id/addImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="картинка"
        app:layout_constraintEnd_toEndOf="@+id/imNewImageView"
        app:layout_constraintStart_toStartOf="@+id/imNewImageView"
        app:layout_constraintTop_toBottomOf="@+id/imNewImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>