<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lesson_16.Lesson16Activity">

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Add new button" />

    <Button
        android:id="@+id/newActivityRelativLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addButton"
        android:layout_alignStart="@id/addButton"
        android:layout_alignEnd="@id/addButton"
        android:text="Relativ layout"
        />

    <Button
        android:id="@+id/newActivityConstraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newActivityRelativLayout"
        android:layout_alignStart="@id/addButton"
        android:layout_alignEnd="@id/addButton"
        android:text="constraint layout"
        />

</RelativeLayout>